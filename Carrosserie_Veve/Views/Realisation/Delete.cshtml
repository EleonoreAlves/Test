@model MvcVeve.Models.Realisation

@{
    ViewData["Title"] = "Delete";
}

<h2 style="tex-align:center">Supprimer une réalisation</h2>

<h4>Etes-vous sûr?</h4>
<hr />
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.NomRealisation)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ImageAvt)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ImageAp)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
<hr/>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index"><input class="btn btn-secondary" type="button" value="Retour"></a>
    </form>
</div>