@model IEnumerable<MvcVeve.Models.Prestation>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Prestation";
}
<p><br/></p>
<div class="row">
    @foreach (var item in Model)
{
<div class="card container col-3" style="width: 18rem;">
    <br/>
  <img class="card-img-top " style="margin-top:10px" src="../images/prestationaccueil.jpg" alt="Card image cap">
  <br/>
  <div class="card-body ">
    <h5 class="card-title " style="text-align:center"> @Html.DisplayFor(modelItem => item.NomPrestation)</h5><br/>
    <p class="card-text" style="text-align:center">@Html.DisplayFor(modelItem => item.Description_courte)</p> 
    <br/>
    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger container" > En savoir plus</a><br/>

  @if (SignInManager.IsSignedIn(User))
  {
    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger container" style="margin-top:10px" > Modifier</a><br/><br/>
    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger container" > Supprimer</a>
  }
  </div>
</div> <br/>
}
<div><br/><br/><br/></div>

<div class="card container col-3" style="width: 18rem;">
    <br/><br/>
  <a asp-action="Create" class="container"><img class="card-img-top container" style="display: flex;margin-top:10px; width: 75%;text-align:center" src="../images/ajouter.png" alt="Card image cap"> </a>
  
  <br/>
  <div class="card-body">
    <a asp-action="Create" class="btn btn-danger container" > Ajouter</a>
  </div>
</div> <br/>