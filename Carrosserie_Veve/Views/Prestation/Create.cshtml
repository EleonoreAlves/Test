@model MvcVeve.Models.Prestation

@{
    ViewData["Title"] = "Create";
}

<h2 style="text-align:center">Ajouter une Prestation</h2>
<hr />
<div class="row container">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NomPrestation" class="control-label"></label>
                <input asp-for="NomPrestation" class="form-control" />
                <span asp-validation-for="NomPrestation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description_courte" class="control-label"></label>
                <input asp-for="Description_courte" class="form-control" />
                <span asp-validation-for="Description_courte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" type="file" name="Image" accept="image/png, image/jpeg, image/webp" required  />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div><br/>
            
            <div class="form-group">
                <input asp-page-handler="Upload" type="submit" value="Ajouter une prestation" class="btn btn-danger" />
                <a asp-action="Index"><input class="btn btn-secondary" type="button" value="Retour"></a>
            </div>
        </form>
    </div>
</div>


    

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}